<% favorite = mypage_favorites_container %>
<div class="mypage-manner-container">
  <div class="answer-container">
    <p class="manner-subject-text"><%= link_to 'お題：'+ favorite.manner.subject.title, favorite.manner.subject, class: '' %></p>
    <p class="answer-text"><%= favorite.manner.title %></p>
    <div class="answer-bottom">
      <div class="sns-buttons ml-0 mr-auto">
        <i class="fab fa-twitter fa-fw fa-lg"></i>
        <i class="fab fa-facebook-square fa-fw fa-lg"></i>
      </div>
      <div class="like-button mr-0">
          <i class="far fa-heart liked" data-manner-id="<%= favorite.manner.id.to_s %>"></i>
        <span class="like-count manner-id-<%= favorite.manner.id.to_s %>"><%= favorite.manner.favorites_count.to_s %></span>
      </div>
    </div>
  </div>
</div>
