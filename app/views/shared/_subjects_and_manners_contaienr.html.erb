<% subject = subject_and_manners_container %>
<% manners = subject.manners.order('favorites_count') %>
<div class="card subject-container">
  <%= render partial: "shared/subject_container", locals: { subject: subject } %>
  <%= render partial: "shared/manner_container", locals: { manner: manners[0] } %>
  <%= render partial: "shared/manner_container", locals: { manner: manners[1] } %>
  <%= render partial: "shared/manner_container", locals: { manner: manners[2] } %>
  <a href="#" class="btn read-more-manners">
    <%= subject.name %>をもっと読む
  </a>
</div>
