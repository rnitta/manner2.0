<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.bundle.min.js"></script>
<%= javascript_pack_tag 'mypage' %>
<%= render partial: "shared/nav_bar" %>
<%= render partial: "shared/header_img" %>
<div class="container">
  <%= render partial: "shared/header_nav" %>
  <div class="row content-area">
    <div class="main-container col-md-8">
      <div class="mydata card">
        <h2>プロフィール</h2>
        <div class="profile-container">
          <p class="profile-name">
            <strong><%= current_user.name %></strong>さん</p>
          <p class="profile-profile">一言：<%= current_user.profile %></p>
        </div>
        <div class="chart-container">
          <canvas id="rader-chart"></canvas>
        </div>
        <hr>
        <h2>最近投稿したマナー</h2>
        <% @manners.each do |manner| %>
          <div class="mypage-manner-container">
            <p class="manner-subject-text"><%= link_to 'お題：'+ manner.subject.title, manner.subject, class: '' %></p>
            <p class="manner-text"><%= manner.title %></p>
          </div>
        <% end %>
        <hr>
        <h2>最近投稿したお題</h2>
        <% @subjects.each do |subject| %>
          <div class="mypage-subject-container">
            <p class="subject-text"><%= link_to subject.title+'を教えてください。', subject, class: '' %></p>
            <p class="subject-size">回答数：<%= subject.manners.size %></p>
          </div>
        <% end %>

        <hr>
        <h2>最近のいいね</h2>
      </div>
    </div>
    <div class="side-container col-md-4">
      <%= render partial: "shared/mypage_right_menu" %>
    </div>
  </div>
</div>
