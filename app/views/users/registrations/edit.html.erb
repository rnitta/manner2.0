<div class="container">
  <%= render partial: "shared/component/heading" %>
  <div class="row content-area">
    <div class="main-container form-container col-md-8">
      <div class="mydata card">
        <h2>ユーザー情報変更</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <label for="user_email">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mx-auto' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>現在このメールアドレスで認証待ちです：<%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="field">
          <label for="user_name">ユーザー名（※必須）</label>
          <%= f.text_field :name, value: current_user.name, class: 'mx-auto' %>
        </div>
        <div class="field">
          <label for="user_profile">一言プロフィール(200文字ぐらいまで)</label>
          <%= f.text_field :profile, value: current_user.profile, class: 'mx-auto' %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class: 'btn btn-dark' %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="side-container col-md-4">
    <%= render partial: "shared/mypage_right_menu" %>
  </div>
</div>
</div>
